<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Activity.SignInActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp"
        android:layout_margin="100dp">

        <ImageView
            android:id="@+id/Signin_IMG_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@drawable/logoaeon" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Signin_TV_Email"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Email:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Signin_EDT_Email"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signin_edit"
        android:ems="10"
        android:hint="abc@gmail.com"
        android:inputType="text"
         />

    <TextView
        android:id="@+id/Signin_TV_PASS"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Mật khẩu:"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/Signin_EDT_PASS"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signin_edit"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="abc"
        />

    <Button
        android:id="@+id/Signin_BTN_Signin"
        android:layout_width="187dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Đăng nhập"
        android:textSize="20dp"
        android:backgroundTint="@color/xanh_la_cay_dam"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginLeft="145dp"
        android:text="Chưa có tài khoản"/>
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginLeft="130dp"
    app:layout_constraintTop_toBottomOf="@+id/textView12">
    <Button
        android:id="@+id/Signin_BTN_SignUp"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:backgroundTint="#00387A5C"
        android:text="Đăng ký ngay"
        android:shadowColor="#8D000000"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"/>
    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/underline" />
</RelativeLayout>
</LinearLayout>